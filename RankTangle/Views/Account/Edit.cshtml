@using System.Text.RegularExpressions
@model EditViewModel
@{
    ViewBag.Title = "Account info";
}
@section Javascript{ <script async src="@Url.Content("~/Javascript/Register.js")"></script> }
@section Css{ <link rel="stylesheet" href="@Url.Content("~/Css/Players.css")"/>}

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { id = "edit-player" }))
{
    <h3>@(Model.Player.Name)'s account</h3>
    
    @Html.HiddenFor(m => m.Player.Id)

    <a href="http://www.gravatar.com">
        <img id="profile-gravatar" alt="Gravatar picture" src="@Html.GetGravatarEmailHash(Model.Player.Email)"/>
    </a>
    <br/><br/>
    
    @Html.LabelFor(m => Model.Player.Email, "Email")
    @Html.TextBoxFor(m => m.Player.Email, new { placeholder = "Email", autocapitalize = "off", autocorrect = "off", @class = "long"})
    <br/><br/> 
    @Html.LabelFor(m => Model.Player.Name)
    @Html.TextBoxFor(m => Model.Player.Name, new { placeholder = "Name"})
    <br/><br/>
    @Html.LabelFor(m => Model.Player.Gender, "Gender")
    @Html.DropDownListFor(m => Model.Player.Gender, Model.Genders)
    <br/><br/>
    @Html.LabelFor(m => Model.Player.Password)
    @Html.PasswordFor(m => Model.Player.Password, new { placeholder = "Password"})
    <br/><br/>
    @Html.LabelFor(m => Model.NewPassword, "Repeat password")
    @Html.Password("Password", Model.NewPassword, new { placeholder = "Repeat password", @id = "Player_RepeatPassword" })

    <div class="validation-message small All"></div>
    <div class="validation-message small Email"></div>
    <div class="validation-message small Name"></div>
    <div class="validation-message small Password"></div>

    <a id="go-back" href="@Model.ReferralUrl">Go Back</a>
}
